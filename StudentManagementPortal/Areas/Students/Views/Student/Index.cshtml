@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Manage Student</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="AddStudent" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Student</a>
        </div>

    </div>


    <table class="table table-bordered table-striped" style="width:100%">

        <thead>
            <tr>
                <th class="col-3">ID</th>
                <th class="col-3">Student Name</th>
                <th class="col-3">Email</th>
            </tr>
        </thead>
    
        <tbody>
            @foreach(var student in Model)
            {
                <tr>
                    <td>
                        @student.Id
                    </td>
                    <td>
                        @student.Name
                    </td>
                    <td>
                        @student.Email
                    </td>
                    <td>
                       <div class="btn-group" role="group">
                           <a asp-controller="Student" asp-action="GetDetails" asp-route-id="@student.Id" class="btn btn-primary mx-2">
                           <i class="bi bi-pencil-square"></i>&nbsp;Details</a>
                       </div>
                    </td>
                    <td>
                       <div class="btn-group" role="group">
                           <a asp-controller="Student" asp-action="EditStudent" asp-route-id="@student.Id" class="btn btn-primary mx-2">
                           <i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                       </div>
                    </td>
                    <td>
                       <div class="btn-group" role="group">
                           <a asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@student.Id" class="btn btn-danger mx-2">
                           <i class="bi bi-x-square"></i>&nbsp;Delete</a>
                       </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
